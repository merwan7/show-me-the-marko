{
  "manifest_version": 2,

  "name": "Show me the Marko!",
  "short_name": "See Marko!",
  "description": "Highlight Marko components on the page.",
  "version": "1.1",

  "icons": {
    "600": "images/marko.png",
    "128": "images/marko-128.png",
    "112": "images/marko-112.png",
    "48": "images/marko-48.png",
    "16": "images/marko-16.png"
  },

  "page_action": {
    "default_icon": {
      "38": "images/marko-38.png",
      "19": "images/marko-19.png"
    },
    "default_title": "Highlight Marko components!"
  },

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "declarativeContent"
  ]
}
